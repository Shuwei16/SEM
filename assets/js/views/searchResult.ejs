<body>
    <div id="searchResultContainer" class="mt-5">
        <h3>Total Results: <%= searchList.length %>
        </h3>
        <div class="table-responsive">
            <table class="table table-striped-columns">
                <thead>
                    <tr>
                        <th scope="col">Searching Result</th>
                    </tr>
                    <tr>
                        <th scope="col-md-auto">Programme Name</th>
                        <th scope="col-md-auto">Programme Level</th>
                        <th scope="col-md-auto">Price (RM)</th>
                        <th scope="col-md-auto">Duration</th>
                        <th scope="col-md-auto">Minimum Requirement</th>
                        <th scope="col-md-auto">Description</th>
                        <th scope="col-md-auto">Programme Outline</th>
                        <th scope="col-md-auto">Career Prospects</th>
                    </tr>
                </thead>
                <tbody>
                    <%searchList.forEach( search=> { %>
                        <tr>
                            <td scope="col">
                                <%= search.name %>
                            </td>
                            <td scope="col">
                                <%= search.level %>
                            </td>
                            <td scope="col">
                                <%= search.price %>
                            </td>
                            <td scope="col">
                                <%= search.Duration %>
                            </td>
                            <td scope="col">
                                <%= search.MinimumRequirement %>
                            </td>
                            <td scope="col">
                                <%= search.description %>
                            </td>
                            <td scope="col">
                                <%= search.ProgrammeOutline %>
                            </td>
                            <td scope="col">
                                <%= search.CareerProspects %>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>

</html>