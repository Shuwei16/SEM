<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Database</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>
<body>
    <h1 class="text-center">Submit your question to us now!</h1>

    <div class="container">
        <div class="col">
            <form id="questionForm" action="" novalidate >
                    <div class="row">
                        <label for="questionName">Name:</label><br>
                        <input type="text" id="questionName" placeholder="Enter your name.."><br>
                    </div>
                    </div>
                    <div class="row">
                        <label for="questionEmail">Email:</label><br>
                        <input type="text" id="questionEmail" placeholder="Enter your email.."><br>
                    </div>
                    <div class="row">
                        <label for="questionPhoneNum">Phone Number:</label><br>
                        <input type="text" id="questionPhoneNum" placeholder="Enter your phone number.."><br>
                    </div>
                    <div class="row">
                        <label for="questionResponse">Type your question below:</label><br>
                        <textarea id="questionResponse" name="questionResponse" placeholder="Type your question here.." rows="4" cols="50"></textarea>
                    </div>
              
            <div class="col my-3 text-center ">
                <button class="btn btn-primary" type="submit" id="submitQuestionForm">Submit Form</button>  
            </div>
        </form>
            <div class="container my-5">
                <div class="row">
                    <div class="col-sm d-flex justify-content-start">
                        <a href="/"><button class=" btn btn-primary ">Back</button></a>
                    </div>
                    <div class = "col-sm d-flex justify-content-end">
                        <a href="/questionPage"><button class="btn btn-primary">Check Question Status</button></a>
                    </div>
                </div>
            </div>
        </div>
        
    </div>

</body>
</html>
<script type="text/javascript">
    document.getElementById('questionForm').addEventListener('submit', async (event) => {
        alert("Your question has been submitted. Our staff will contact you within one week through either phone calling or email. Please stay tuned. Thanks for providing us the response.");
        console.log("Form submitted!");
        // Retrieve the value from the form
        const questionName = document.getElementById('questionName').value;
        const questionEmail = document.getElementById('questionEmail').value;
        const questionPhoneNum = document.getElementById('questionPhoneNum').value;
        const questionResponse = document.getElementById('questionResponse').value;
        
        // Make a POST request to your /result endpoint with course1 and course2 values
        const response = await fetch('/questionStatus', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({questionName,questionEmail,questionPhoneNum,questionResponse}),
        });
    });
</script>