<body>

    <header class="my-5 mx-auto">
        <img src="/images/tarumt-logo.png" class="w-25 rounded mx-auto d-block">
        <h1 class="text-center">Query to FOCS</h1>
        <h5 class="text-center">Submit your question to us now!</h5>
    </header>

    <div class="container">
        <form id="questionForm" action="" novalidate>
            <div class="row my-4">
                <div class="col-md-3">
                    <label for="questionName">Name:</label>
                </div>
                <div class="col-md-9">
                    <input type="text" id="questionName" placeholder="Enter your name.." class=" w-100">
                </div>
            </div>
            <div class="row my-4">
                <div class="col-md-3">
                    <label for="questionEmail">Email:</label>
                </div>
                <div class="col-md-9">
                    <input type="text" id="questionEmail" placeholder="Enter your email.." class="w-100">
                </div>
            </div>
            <div class="row my-4">
                <div class="col-md-3">
                    <label for="questionPhoneNum">Phone Number:</label>
                </div>
                <div class="col-md-9">
                    <input type="text" id="questionPhoneNum" placeholder="Enter your phone number.." class="w-100">
                </div>
                <div class="row my-4">
                    <div class="col-md-3">
                        <label for="questionResponse">Type your question below:</label>
                    </div>
                    <div class="col-md-9">
                        <textarea id="questionResponse" name="questionResponse" placeholder="Type your question here.."
                            rows="4" class="w-100"></textarea>
                    </div>

                    <div class="col my-3 text-center ">
                        <button class="btn btn-primary" type="submit" id="submitQuestionForm"
                            style="background-color: #ECA500;border-color: #ECA500;">Submit Form</button>
                    </div>
        </form>
