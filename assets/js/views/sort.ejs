<body>

    <header class="my-5 mx-auto">
        <img src="/images/tarumt-logo.png" class="w-25 rounded mx-auto d-block">
        <h1 class="text-center">All FOCS Programmes</h1>
        <h5 class="text-center">Sorted by Price</h5>
    </header>

    <div class="table-responsive container">
        <table class="table table-striped-columns">
            <thead>
                <th scope="col-md-auto">Programme Name</th>
                <th scope="col-md-auto">Programme Level</th>
                <th scope="col-md-auto">Price (RM)</th>
                <th scope="col-md-auto">Duration</th>
                <th scope="col-md-auto">Minimum Requirement</th>
                <th scope="col-md-auto">Description</th>
                <th scope="col-md-auto">Programme Outline</th>
                <th scope="col-md-auto">Career Prospects</th>
            </thead>
            <tbody>
                <%progList.forEach( prog=> { %>
                    <tr>
                        <td scope="col">
                            <%= prog.name %>
                        </td>
                        <td scope="col">
                            <%= prog.level %>
                        </td>
                        <td scope="col">
                            <%= prog.price %>
                        </td>
                        <td scope="col">
                            <%= prog.Duration %>
                        </td>
                        <td scope="col">
                            <%= prog.MinimumRequirement %>
                        </td>
                        <td scope="col">
                            <%= prog.description %>
                        </td>
                        <td scope="col">
                            <%= prog.ProgrammeOutline %>
                        </td>
                        <td scope="col">
                            <%= prog.CareerProspects %>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>
    <div class="text-center my-5">
        <a href="/"><button class="btn btn-primary"
                style="background-color: #ECA500;border-color: #ECA500;">Back</button></a>
    </div>
</body>

</html>